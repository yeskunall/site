    "commitizen": "4.3.1",
    "cspell": "8.17.3",
    "cssnano": "7.0.6",
    "cssnano-preset-advanced": "7.0.6",
    "eslint": "9.20.1",
    "eslint-plugin-astro": "1.3.1",
    "eslint-plugin-format": "0.1.3",
    "eslint-plugin-jsx-a11y": "6.10.2",
    "eslint-plugin-react-hooks": "5.1.0",
