    "ignoreDependencies": [
      "@commitlint/config-conventional",
      "@radix-ui/colors",
      "@types/umami",
      "autoprefixer",
      "cssnano-preset-advanced",
      "eslint-plugin-typescript-sort-keys",
      "lint-staged",
      "simple-git-hooks"
