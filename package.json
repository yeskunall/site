  "simple-git-hooks": {
    "pre-commit": "pnpm dlx lint-staged"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "config": {
    "commitizen": {
      "path": "@commitlint/cz-commitlint"
    }
  },
  "lint-staged": {
    "*": [
      "pnpm run knip"
    ],
    "**/*.{astro,cjs,js,jsx,json,mjs,ts,cts,mts,tsx,yml}": [
      "eslint ."
    ],
    "**/*.md": [
      "pnpm run lint:md",
      "pnpm run lint:spell"
    ]
  }
