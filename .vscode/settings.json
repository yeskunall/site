{
  "cSpell.enableFiletypes": [
    "astro",
    "css",
    "dockerfile",
    "git-commit",
    "git-rebase",
    "github-actions-workflow",
    "go",
    "graphql",
    "html",
    "javascript",
    "javascriptreact",
    "json",
    "jsonc",
    "markdown",
    "mdx",
    "plaintext",
    "text",
    "typescript",
    "typescriptreact",
    "yaml"
  ],
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit",
    "source.organizeImports": "always"
  },
  "[go]": {
    "editor.defaultFormatter": "golang.go"
  },
  "editor.formatOnSave": true,
  "editor.quickSuggestions": {
    "strings": true
  },
  "editor.wordWrap": "bounded",
  "editor.wordWrapColumn": 120,
  "emmet.includeLanguages": {
    "astro": "html"
  },
  "eslint.validate": [
    "astro",
    "html",
    "javascript",
    "javascriptreact",
    "json",
    "markdown",
    "typescript",
    "typescriptreact",
    "yaml"
  ],
  "eslint.useFlatConfig": true,
  "files.associations": {
    "*.css": "tailwindcss",
    "*.mdx": "markdown"
  },
  "[markdown][mdx]": {
    "editor.codeActionsOnSave": {
      "source.fixAll.markdownlint": "always"
    }
  },
  "tailwindCSS.experimental.classRegex": [
    // Enable Tailwind CSS code completion for the following functions
    [
      "cn\\(([^)]*)\\)",
      "[\"'`]([^\"'`]*).*?[\"'`]"
    ],
    [
      "cva\\(([^)]*)\\)",
      "[\"'`]([^\"'`]*).*?[\"'`]"
    ],
    [
      "cx\\(([^)]*)\\)",
      "[\"'`]([^\"'`]*).*?[\"'`]"
    ]
  ]
}