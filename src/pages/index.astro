<style>
  @media (hover: hover) {
    ul:hover li {
      opacity: 0.7;
      will-change: transform;
    }

    ul:hover li:hover a:hover {
      opacity: 1;
      transition: color 50ms cubic-bezier(0.4, 0, 0.2, 1);
      will-change: transform;
    }
  }

  @keyframes enter {
    0% {
      opacity: 0;
      transform: translateY(10px);
    }

    to {
      opacity: 1;
      transform: none;
    }
  }

  [data-animate] {
    --delay: 120ms;
    --stagger: 0;
    --start: 0ms;
  }

  @media (prefers-reduced-motion: no-preference) {
    [data-animate] {
      animation: enter 0.6s both;
      animation-delay: calc(var(--delay) * var(--stagger) + var(--start));
    }
  }
</style>
