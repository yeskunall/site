---
import { UndoIcon } from "lucide-react";

import BlogHero from "@/components/blog/hero.astro";
import BaseLayout from "@/layouts/Base.astro";

import { createOgImage } from "@/lib/og/create-og-image";
import { getFormattedDate } from "@/utils";

import type { CollectionEntry } from "astro:content";

interface Props {
  post: CollectionEntry<"post">;
}

const { post } = Astro.props;
const {
  data: { title, description, publishDate },
} = post;

const articleDate = publishDate.toISOString();
const ogImage = createOgImage({
  meta: [
    getFormattedDate(articleDate, {
      month: "long",
    }),
  ].join(" Â· "),
  title: title,
});
---

<script>
  const scroll = document.getElementById("to-top-btn") as HTMLButtonElement;
  const targetHeader = document.getElementById("blog-hero") as HTMLDivElement;

  function callback(entries: IntersectionObserverEntry[]) {
    entries.forEach(entry => {
      // Only show the scroll to top button when the heading is out of view
      scroll.dataset.show = (!entry.isIntersecting).toString();
    });
  }

  scroll.addEventListener("click", () => {
    document.documentElement.scrollTo({ top: 0, behavior: "smooth" });
  });

  const observer = new IntersectionObserver(callback);
  observer.observe(targetHeader);
</script>

<BaseLayout meta={{ title, description, articleDate, ogImage }}>
  <article>
    <div class="flex cursor-pointer items-center justify-center">
      <a
        class="inline-flex items-center justify-center space-x-3 rounded-3xl bg-neutral-100/70 px-5 py-3 transition-colors hover:bg-neutral-300/30"
        href="/writing"
      >
        <UndoIcon strokeWidth={1.5} className="h-5 w-5 mr-1" />&nbsp;Blog
      </a>
    </div>
    <div id="blog-hero">
      <BlogHero post={post} />
    </div>
    <div
      class="prose prose-base mt-12 prose-headings:font-medium prose-headings:text-neutral-950/90 prose-p:leading-relaxed prose-p:text-neutral-950/80 prose-a:text-neutral-900/90 prose-a:underline prose-a:underline-offset-2 prose-code:text-[12.5px] prose-code:leading-[18px]"
    >
      <slot />
    </div>
  </article>
  <button
    id="to-top-btn"
    class="z-90 fixed bottom-8 end-4 flex h-10 w-10 translate-y-28 items-center justify-center rounded-full border-2 border-transparent bg-neutral-100/70 text-3xl text-neutral-500/75 opacity-0 transition-all duration-300 hover:border-neutral-100/50 data-[show=true]:translate-y-0 data-[show=true]:opacity-100 sm:end-8 sm:h-12 sm:w-12"
    aria-label="Back to Top"
    data-show="false"
    ><svg
      xmlns="http://www.w3.org/2000/svg"
      aria-hidden="true"
      focusable="false"
      fill="none"
      viewBox="0 0 24 24"
      stroke-width="2"
      stroke="black"
      class="h-6 w-6"
    >
      <path
        stroke-linecap="round"
        stroke-linejoin="round"
        d="M4.5 15.75l7.5-7.5 7.5 7.5"></path>
    </svg>
  </button>
</BaseLayout>
