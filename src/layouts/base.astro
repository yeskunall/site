---
import type { CollectionEntry } from "astro:content";

import Shynet from "~/components/shynet.astro";
import Footer from "~/layouts/footer.astro";
import Helmet from "~/layouts/helmet.astro";

interface Props {
  post?: CollectionEntry<"post">;
}

const { post } = Astro.props;
---

<html lang="en-CA">
  <head>
    <Helmet post={post} />
  </head>
  <body>
    <main class="mx-auto max-w-prose p-8 py-16">
      <slot />
    </main>
    <Footer />
    {import.meta.env.PROD && <Shynet />}
  </body>
</html>
