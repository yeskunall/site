---
type Props = {
  title?: string;
};

const { title = "Extras" } = Astro.props;
---

<div
  class="mb-4 flex w-full flex-col gap-y-0.5 rounded border border-neutral-200/10 bg-neutral-100/60 p-1 px-4 py-3 text-neutral-50/70"
>
  <h4
    class="!my-1.5 !font-sans !text-xs !font-bold !not-italic !text-neutral-900/70"
  >
    {title}
  </h4>
  <div
    class="contents *:mb-1.5 *:mt-0 *:font-sans *:text-xs *:font-medium *:text-neutral-700/80"
  >
    <slot />
  </div>
</div>
