---
type Props = {
  title?: string;
};

const { title = "Extras" } = Astro.props;
---

<aside
  class="not-prose flex w-full flex-col gap-y-0.5 rounded border border-gray-6 bg-gray-2 px-4 py-3 !text-xs text-gray-11 shadow-md shadow-gray-3 [font:var(--type-ui)]"
>
  <h4 class="font-bold">
    {title}
  </h4>
  <div class="contents *:mb-1.5 *:mt-0">
    <slot />
  </div>
</aside>
