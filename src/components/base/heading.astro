---
import type { HTMLAttributes, HTMLTag } from "astro/types";

import { cn } from "~/lib/utils";

interface Props
  extends HTMLAttributes<"h1" | "h2" | "h3" | "h4" | "h5" | "h6"> {
  as?: HTMLTag;
}

const { as: Element = "h2", class: className } = Astro.props;
---

<Element
  class={cn(
    "font-sans font-semibold tracking-tight text-lime-12 sm:tracking-tighter",
    className,
  )}
>
  <slot />
</Element>
