---
const TABS = [
  {
    id: "index",
    name: "Index",
    href: "/",
  },
  {
    id: "writing",
    name: "Blog",
    href: "/writing",
  },
  {
    id: "now",
    name: "Now",
    href: "/now",
  },
  {
    id: "sitemap",
    name: "Sitemap",
    href: "/sitemap-index.xml",
  },
];
---

{/* eslint-disable max-len */}

<footer class="group my-8 select-none p-3">
  <nav
    class="mx-auto flex items-center justify-around opacity-50 transition-opacity group-hover:opacity-70 sm:mb-6 sm:max-w-md"
  >
    {
      TABS.map(item => (
        <a
          class="text-neutral-950/95 transition-colors hover:text-neutral-950/75 [&:not(:hover)]:text-neutral-950/30"
          href={item.href}
        >
          {item.name}
        </a>
      ))
    }
  </nav>
</footer>

<style>
  @keyframes enter {
    0% {
      opacity: 0;
      transform: translateY(10px);
    }

    to {
      opacity: 1;
      transform: none;
    }
  }

  [data-animate] {
    --delay: 120ms;
    --stagger: 0;
    --start: 0ms;
  }

  @media (prefers-reduced-motion: no-preference) {
    [data-animate] {
      animation: enter 0.6s both;
      animation-delay: calc(var(--delay) * var(--stagger) + var(--start));
    }
  }
</style>
